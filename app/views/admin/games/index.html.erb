<div class="pull-right">
  <%= link_to("增加🏀篮球", new_basketball_path, :class => "btn btn-default" ) %>
</div>

<div class="pull-right">
  <%= link_to("增加⚽️足球", new_football_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>时间</th>
      <th>联赛</th>
      <th>球队</th>
      <th>信号</th>
      <th>管理</th>

  </tr>

  </thead>

  <tbody>
  <% @games.each do |game| %>
  <tr>
    <td>
      <%= game.time %>
    </td>
    <td>
      <i class="fas fa-basketball-ball"></i>
        <%= game.league  %>
    </td>

    <td>

      <%= game.description %>
    </td>
    <td>
    <%= link_to(game.signal,admin_game_path(game), :class => "btn btn-default")  %>
    </td>
    <td>
      <%= link_to("Edit", edit_admin_game_path(game), :class => "btn btn-default") %>

      <%= link_to("Delete",admin_game_path(game), :class => "fas fa-trash-alt btn btn-danger ",   :method => :delete, :data => {:confirm => "Are you sure?", }) %>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>
