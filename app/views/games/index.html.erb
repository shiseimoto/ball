<table class="table table-bordered">
  <thead>
    <tr>
    <th>时间</th>
    <th>联赛</th>
    <th>球队</th>
    <th>信号</th>
  
  </tr>

  </thead>

  <tbody>
  <% @games.each do |game| %>
  <tr>
    <td>
      <%= game.time %>
    </td>
    <td>
      <%= game.league %>
    </td>
    <td>
      <%= game.description %>
    </td>
    <td>
    <%= game.signal %>
    </td>

  </tr>
  <% end %>
</tbody>
</table>
