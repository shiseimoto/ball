<div class="pull-right">
  <%= link_to("增加足球⚽️赛程", new_football_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>时间</th>
      <th>联赛</th>
      <th>球队</th>
      <th>信号</th>
      <th>管理</th>

  </tr>

  </thead>

  <tbody>
  <% @footballs.each do |football| %>
  <tr>
    <td>
      <%= football.time %>
    </td>
    <td>
      <i class="fas fa-basketball-ball"></i>
        <%= football.league  %>
    </td>

    <td>

      <%= football.description %>
    </td>
    <td>
    <%= link_to(football.signal,football_path(football), :class => "btn btn-default")  %>
    </td>
    <td>
      <%= link_to("Edit", edit_football_path(football), :class => "btn btn-default") %>

      <%= link_to("Delete",football_path(football), :class => "fas fa-trash-alt btn btn-danger ",   :method => :delete, :data => {:confirm => "Are you sure?", }) %>
    </td>
  </tr>
  <% end %>
  </tbody>
  </table>
